<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" type="text/css" href="navbar_style.css">
  <link rel="stylesheet" href="UI.css">
  <title>Published</title>
</head>
<body>
  <%- include ('navbar.ejs') %>
  <div class="container">
    <br>
    <div class="text-center"><h2>Published</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="50">Article Title</th>
            <th width="50">Image</th>
            <th width="50">Published Date</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < article.length; i++) { %>
          <tr>
            <td><a href="/article/<%= article[i].art_id %>"><%= article[i].title %></a></td>
            <td><img src="<%= article[i].image %>" width="50%"></td>
            <td><%= new Date(article[i].date).toLocaleDateString('en-US', {month: 'long' , day: 'numeric' ,
              year: 'numeric' }) %></td>
            <td><a href="/editarticle/<%= article[i].art_id %>">Edit</a></td>
            <td><a href="/deletearticle/<%= article[i].art_id %>" 
              onclick="return confirm('Are you sure you want to delete this article?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  
</body>
</html>
